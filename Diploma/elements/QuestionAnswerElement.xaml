<UserControl x:Class="Diploma.elements.QuestionAnswerElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diploma.elements"
             mc:Ignorable="d" 
             d:DesignHeight="159.023" d:DesignWidth="234.962">
    <Grid x:Name="mainGrid">
        <TextBlock x:Name="number" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="answerText" HorizontalAlignment="Left" Margin="42,47,0,0" TextWrapping="Wrap" Text="Ответ" VerticalAlignment="Top"/>
        <TextBox x:Name="answer1" HorizontalAlignment="Left" Height="23" Margin="97,46,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="scaleComboBox" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="215" ItemsSource="{Binding Path=cmbContent}" SelectionChanged="ScaleComboBox_SelectionChanged"/>

    </Grid>
</UserControl>
