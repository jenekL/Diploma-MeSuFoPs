      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diploma.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuestionAnswersPage">

    <Grid Width="800" Height="450">
        <Button x:Name="BackButton" Content="Назад" HorizontalAlignment="Left" Margin="10,420,0,0" VerticalAlignment="Top" Width="75" Click="BackButton_Click"/>
        <ScrollViewer x:Name="scrollView" Height="450" Margin="105,0,0,0" Width="695"/>
        <Button x:Name="addAnswerButton" Content="Добавить ответ" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="AddAnswerButton_Click"/>

    </Grid>
</Page>
